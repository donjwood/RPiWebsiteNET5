@page
@model RPiWebsiteNET5.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<!--div id ="loginApp"></div-->

<div class="card mx-auto" style="max-width:400px;">
    <h5 class="card-header">Login</h5>
    <div class="card-body">
        <div class="card-text">
            <form method="post">
                @if (!string.IsNullOrEmpty(Model.LoginError)) {
                    <div class="row">
                        <div class="col-12">
                            <div class="alert alert-danger" role="alert">
                                <i class="fas fa-exclamation-triangle"></i> @Model.LoginError
                            </div>
                        </div>
                    </div>
                }
                <div class="form-group row">
                    <label asp-for="Username" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Username" />
                    </div>
                    <span asp-validation-for="Username" class="offset-sm-4 col-sm-8"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Password" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Password" />
                    </div>
                    <span asp-validation-for="Password" class="offset-sm-4 col-sm-8"></span>
                </div>
                <div class="form-group row">
                    <div class="col-12 text-center">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-sign-in-alt"></i> Login</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
